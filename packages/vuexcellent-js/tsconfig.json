{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "./",
    "typeRoots": ["./types", "./node_modules/@types", "./node_modules/axios"]
  },
  "include": ["lib"],
  "exclude": ["node_modules", "types", "__tests__", "dist"]
}
